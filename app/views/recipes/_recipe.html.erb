<div class="row">
  <h5 class="mr-3"><%= link_to recipe.name, recipe_path(recipe) %></h5>
  <p class="mr-3">Prep Time: <%= recipe.prep_time %></p>
  <p class="mr-3">Cook Time: <%= recipe.cook_time %></p>
  <p class="">Total Time: <%= recipe.total_time %></p>
</div>
<% if action == 'show' %>
  <div class="card">
    <div class="card-block">
      <p><%= recipe.instructions %></p>
    </div>
  </div>
<% end %>